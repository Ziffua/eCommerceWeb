@using eCommerceWeb.ViewModels;
@model RegisterVM;

@{
    ViewData["Title"] = "Yeni hesap oluştur";
}
<div class="row">
    <div class="col-md-6 offset-3">
        <p>
            <h4>Yeni hesap oluştur</h4>
        </p>

<div class="row">
    <div class="col-md-8 offset-2">
        <form asp-action="Register">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="FullName" class="control-label"></label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ConfirmPassword" class="control-label"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input asp-for="IsSeller" type="checkbox"/>
                <label asp-for="IsSeller" class="control-label">Ürün satmak istiyorum</label>
            </div>

            <div id="ShopDetails" style="display:none;">
                <div class="form-group">
                    <label asp-for="ShopName"></label>
                    <input asp-for="ShopName" class="form-control" />
                    <span asp-validation-for="ShopName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ShopAbout"></label>
                    <input asp-for="ShopAbout" class="form-control" />
                    <span asp-validation-for="ShopAbout" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ShopPicture"></label>
                    <input asp-for="ShopPicture" class="form-control" />
                    <span asp-validation-for="ShopPicture" class="text-danger"></span>
                </div>
            </div>

            <button type="submit" class="btn btn-primary mt-2">Kaydol</button>
        </form>
    </div>
</div>

<script>
    document.getElementById('IsSeller').addEventListener('change', function () {
        var shopDetails = document.getElementById('ShopDetails');
        if (this.checked) {
            shopDetails.style.display = 'block';
        } else {
            shopDetails.style.display = 'none';
        }
    });
</script>
